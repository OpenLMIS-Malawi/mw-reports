{
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "description": "The reason in line item.",
  "properties": {
    "isFreeTextAllowed": {
      "type": "boolean"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "id": {
      "type": [
        "null",
        "string"
      ]
    },
    "reasonType": {
      "type": "string"
    },
    "reasonCategory": {
      "type": "string"
    },
    "tags": {
      "type": ["array", "null"],
      "items": {
        "type": ["string"]
      }
    }
  },
  "required": [
    "isFreeTextAllowed",
    "name",
    "description",
    "reasonType",
    "reasonCategory"
  ]
}
